<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/messageContactImage"
            android:scaleType="fitCenter"
            android:layout_width="60dp"
            app:strokeColor="@null"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@color/colorPrimary"
            app:shapeAppearanceOverlay="@style/circule" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/messageContactUsername"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:fontFamily="@font/poppins_bold"
            android:paddingHorizontal="10dp"
            android:text="Jennifer Fritz"
            android:textColor="#000" />

        <TextView
            android:id="@+id/messageContactMessage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:paddingHorizontal="10dp"
            android:text="Lorem Lorem Lorem Lorem Lorem Lorem " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingVertical="15dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/messageContactTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="3:15 PM"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/messageContactDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:paddingVertical="10dp"
            android:text="24/08/2022"
            android:textAlignment="center"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>